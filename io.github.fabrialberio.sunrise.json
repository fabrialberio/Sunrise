{
    "id": "io.github.fabrialberio.sunrise",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.ziglang"
    ],
    "command": "sunrise",
    "finish-args": [
        "--device=dri",
        "--socket=wayland",
        "--share=ipc",
        "--socket=fallback-x11"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/ziglang",
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler",
                    "tag": "0.18.0"
                }
            ]
        },
        {
            "name": "sunrise",
            "buildsystem": "simple",
            "build-commands": [
                "zig build --prefix /app --release=safe"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
